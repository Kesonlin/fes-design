{
    "compilerOptions": {
        "paths": {
            "fes-design": [
                "./components"
            ]
        },
        "strict": true,
        "strictNullChecks": true,
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "module": "ES6",
        "moduleResolution": "Node",
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "composite": true,
        "target": "ES6",
        "lib": [
            "ESNext",
            "DOM"
        ]
    },
    "include": [
        "./shim.d.ts"
    ]
}